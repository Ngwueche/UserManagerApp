@model UserToLoginVM

<div class="container">
    <main role="main" class="pb-3">
        <div class="auth-panel">
            <div class="auth-panel-inner">
                <h2 class="text-center fw-bolder">Login</h2>
                <div asp-validation-summary="All"></div>
                <form method="post" asp-action="Login" asp-controller="Account">
                    <p><input asp-for="Email" placeholder="Email" /></p>
                    <p><input asp-for="Password" placeholder="Password" /></p>
                    <div>
                        <div><input asp-for=""/>Remember Me</div>
                        <div><a asp-for="">Forgot Password?</a></div>
                    </div>
                    <button class="btn btn-primary text-center w-100 fw-bold" type="submit">Submit</button>
                    <p class="text-center">Don't have an account? <span><a class="fw-bold" asp-action="Register" asp-controller="Account">Register Here</a></span></p>
                </form>
            </div>
        </div>
    </main>
</div>